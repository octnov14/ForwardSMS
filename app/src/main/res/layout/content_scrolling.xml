<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:id="@+id/condition_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="날짜 시작" />

            <EditText
                android:id="@+id/dateAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="yyyy MM dd"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="날짜 종료" />

            <EditText
                android:id="@+id/dateBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="yyyy MM dd"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="포함 번호" />

            <EditText
                android:id="@+id/fromNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="번호 일부 입력"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="포함 내용" />

            <EditText
                android:id="@+id/includingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="내용 일부 입력"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="누구에게 보낼까요?" />

            <EditText
                android:id="@+id/toNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="000 0000 0000"
                android:inputType="number" />

        </LinearLayout>


        <Button
            android:id="@+id/btnQuery"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="받은 문자 조회"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="먼저 조회를 하십시오"
            android:textSize="15sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

